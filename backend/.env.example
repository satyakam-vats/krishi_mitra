# Server Configuration
NODE_ENV=development
PORT=5000

# Database - MongoDB Atlas Configuration
# For local development:
MONGODB_URI=mongodb://localhost:27017/agri-advisor
# For production with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agri-advisor?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# External APIs
# Weather API Configuration
OPENWEATHER_API_KEY=your-openweather-api-key
# Alternative weather APIs
WEATHERAPI_KEY=your-weatherapi-key
ACCUWEATHER_API_KEY=your-accuweather-api-key

# Maps and Location APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
AGROMONITORING_API_KEY=your-agromonitoring-api-key

# Disease Detection Model APIs
CUSTOM_DISEASE_MODEL_API_KEY=your-custom-model-api-key
CUSTOM_DISEASE_MODEL_URL=https://your-model-endpoint.com/api/predict

# Market Data APIs (if needed)
AGRI_MARKET_API_KEY=your-market-data-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Notification Services
# SMS Service Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Push Notification Configuration
FCM_SERVER_KEY=your-firebase-server-key
FCM_SENDER_ID=your-firebase-sender-id

# Disease Outbreak Alert Configuration
ALERT_RADIUS_KM=25
CRITICAL_OUTBREAK_THRESHOLD=10
AUTO_ALERT_ENABLED=true

# File Storage (for crop images)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,kn,ta,te
